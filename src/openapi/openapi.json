{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenApi specification - coficab",
    "description": "OpenApi documentation for Spring Security",
    "termsOfService": "Terms of service",
    "contact": {
      "name": "Coficab",
      "url": "https://www.coficab.com/",
      "email": "amalbenothmen9@gmail.com"
    },
    "license": {
      "name": "Licence name",
